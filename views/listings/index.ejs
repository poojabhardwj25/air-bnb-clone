
<% layout("/layouts/boilerplate") %>
<body>

<!-- Improved Inline Styling for Filters & Cards -->
<style>
  /* =========================
     FILTER BAR DESIGN
  ========================== */
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin: 1.2rem auto;
    padding: 0.8rem 1.5rem;
    background: #fff;
    border-radius: 1.5rem;
    box-shadow:  0 2px 12px rgba(0, 0, 0, 0.05);
    max-width: 95%;
   
  }

  .filter {
    text-align: center;
    opacity: 0.8;
    transition: all 0.3s ease;
    background: #f8f8f8;
    padding: 0.8rem 1rem;
    border-radius: 1rem;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
  }

  .filter:hover {
    opacity: 1;
    transform: scale(1.07);
    background: #fa424d15;
    box-shadow: 0 4px 10px rgba(250, 66, 77, 0.2);
    cursor: pointer;
  }

  .filter i {
display:flex;
align-items:center;
justify-content:center;
width:55px;
height:55px;
font-size:1.6rem;
color: #ff5a5f;
background: #fff4f4;
padding: 0.8rem;
border-radius: 50%;
box-shadow: 0 2px 8px rgba(255, 90, 95, 0.2);
margin:0 auto 0.4rem auto;
  }

  .filter p {
    font-size: 0.85rem;
    margin-top: 0.3rem;
    font-weight: 500;
    color: #222;
  }

  /* Active category (highlight when selected) */
  .filter.active {
    background: #fa424d20;
    box-shadow: 0 4px 15px rgba(250, 66, 77, 0.25);
    transform: scale(1.1);
  }

  /* =========================
     TAX TOGGLE DESIGN
  ========================== */
  .tax-toggle {
    border: none;
    background: #fff4f4;
    box-shadow: 0 2px 10px rgba(255, 90, 95, 0.15);
    padding: 0.6rem 1rem;
    border-radius: 2rem;
    font-size: 0.9rem;
    font-weight:500;
    color:#333;
    display:flex;
    align-items:center;
    gap:0.5rem;
  }

  .tax-toggle:hover {
    transform: scale(1.03);
  }

  /* =========================
     RESPONSIVE FIXES
  ========================== */
  @media (max-width: 768px) {
    #filters {
      overflow-x: auto;
      flex-wrap: nowrap;
      justify-content: flex-start;
      padding: 10px;
      scroll-snap-type: x mandatory;
      gap: 1rem;
    }

    #filters > div {
      flex: 0 0 auto;
      scroll-snap-align: center;
    }

    #filters::-webkit-scrollbar {
      display: none;
    }

    .tax-toggle {
      margin-top: 10px;
      flex: 0 0 auto;
    }
  }

  /* =========================
     LISTING CARD DESIGN
  ========================== */
  .card {
    border: none !important;
    margin-bottom: 2rem;
    border-radius: 1.2rem !important;
    transition: all 0.3s ease;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
  }

  .card:hover {
    transform: scale(1.03);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .card-img-top {
    border-radius: 1.2rem !important;
    height: 20rem;
    object-fit: cover;
  }

  .card-body {
    padding: 1rem !important;
  }

  .card-text b {
    font-size: 1.05rem;
    color: #111;
  }

  .tax-info {
    display: none;
  }
</style>

<!-- ==========================
     FILTER ICONS BAR
=========================== -->
<div id="filters">
  <div class="filter active" data-category="Trending">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter" data-category="Rooms">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter" data-category="Beaches">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beaches</p>
  </div>
  <div class="filter" data-category="Mountains">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter" data-category="Castles">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter" data-category="Camping">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter" data-category="Farms">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter" data-category="Arctic">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
  <div class="filter" data-category="Domes">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </div>
  <div class="filter" data-category="Boats">
    <div><i class="fa-solid fa-ship"></i></div>
    <p>Boats</p>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexswitchCheckDefault">
      <label class="form-check-label" for="flexswitchCheckDefault">Display total before taxes</label>
    </div>
  </div>
</div>

<!-- ==========================
     LISTINGS GRID
=========================== -->
<div id="listingsContainer">
<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
  <% for (let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /night
            <i class="tax-info"> &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>
</div>

<!-- ==========================
     SCRIPT SECTION
=========================== -->
<script>
  //  Tax Toggle Logic
  const taxSwitch = document.getElementById("flexswitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    const taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = info.style.display !== "inline" ? "inline" : "none";
    }
  });

// Active Filter Highlight
const filters = document.querySelectorAll(".filter");
const container = document.getElementById("listingsContainer");

if (filters && container) {
  filters.forEach(f => {
    f.addEventListener("click", async () => {
      const category = f.getAttribute("data-category");
      filters.forEach(item => item.classList.remove("active"));
      f.classList.add("active");

      try {
        const res = await fetch(`/listings/category/${encodeURIComponent(category)}`);
        if (!res.ok) throw new Error(`Server returned ${res.status}`);
        const html = await res.text();
        container.innerHTML = html;
      } catch (err) {
        console.error("Error loading category:", err);
      }
    });
  });
}

  
</script>

</body>
